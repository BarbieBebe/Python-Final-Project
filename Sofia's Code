while True :
    print("\tWelcome to Behind-The-Door Break Room Cafe")
    answer =input("\nHello My name is Berry\nCan I take your order. y/n: ")
    if answer.lower() == 'y' :
        break    
    elif answer == "" :
        print("Please enter 'y' for yes or 'n' for no.")
        continue
    else :
        #error system should be place here
        print(answer)
        
