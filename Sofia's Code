order[item_name] = item_quantity


def find_price(item_name, products_available):
    item_price = 0
    for item in cafe:
        if item_name.lower() == item.lower():
            item_price = item.get("price")
    print(item_price)
    return item_price

for item_name, qty in order.items():
    price = find_price(item, cafe)
    complete_orders[item] = {"qty" : qty, "price" : price}
    
